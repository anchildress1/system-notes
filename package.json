{
  "name": "system-notes",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,js}\"",
    "test": "turbo run test",
    "bench": "turbo run bench",
    "clean": "rm -rf node_modules **/*/node_modules",
    "postinstall": "[ -d .git ] && lefthook install || true"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@checkmarkdevtools/commitlint-plugin-rai": "^0.1.4",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "lefthook": "^2.0.15",
    "prettier": "^3.8.0",
    "turbo": "latest"
  },
  "packageManager": "npm@10.0.0",
  "dependencies": {
    "algoliasearch": "^5.48.0",
    "lucide-react": "^0.562.0",
    "react-instantsearch": "^7.23.1",
    "react-instantsearch-nextjs": "^1.0.13",
    "search-insights": "^2.17.3"
  },
  "overrides": {
    "inquirer": "^8.2.7",
    "tmp": "^0.2.5"
  }
}
