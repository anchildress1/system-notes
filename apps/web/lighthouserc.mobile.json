{
  "ci": {
    "collect": {
      "startServerCommand": "PORT=3000 npm run start:standalone",
      "url": ["http://localhost:3000/"],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.6,
            "aggregationMethod": "optimistic"
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 1,
            "aggregationMethod": "optimistic"
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 1,
            "aggregationMethod": "optimistic"
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 1,
            "aggregationMethod": "optimistic"
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
