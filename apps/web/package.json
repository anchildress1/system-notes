{
  "name": "web",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "cp -r .next/static .next/standalone/apps/web/.next/static && cp -r public .next/standalone/apps/web/public",
    "start": "next start",
    "start:standalone": "node .next/standalone/apps/web/server.js",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint --config eslint.config.mjs .",
    "test": "vitest run --coverage --passWithNoTests",
    "test:watch": "vitest",
    "bench": "vitest bench",
    "test:perf": "npm run build && lhci autorun --config=lighthouserc.mobile.json && lhci autorun --config=lighthouserc.desktop.json"
  },
  "dependencies": {
    "algoliasearch": "^5.47.0",
    "framer-motion": "^12.26.2",
    "instantsearch.css": "^8.9.0",
    "instantsearch.js": "^4.86.1",
    "next": "16.1.5",
    "pixi.js": "^8.15.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^5.5.0",
    "react-instantsearch": "^7.22.1",
    "react-instantsearch-core": "^7.22.1",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.0.0",
    "eslint-config-next": "16.1.3",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.17"
  }
