{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "startServerCommand": "npm run start --workspace=apps/web",
      "url": [
        "http://localhost:3000/"
      ]
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "speed-index": [
          "warn",
          {
            "minScore": 0.5
          }
        ],
        "render-blocking-resources": [
          "warn",
          {
            "maxLength": 2
          }
        ],
        "largest-contentful-paint": [
          "warn",
          {
            "minScore": 0.3
          }
        ],
        "first-contentful-paint": [
          "warn",
          {
            "minScore": 0.3
          }
        ],
        "interactive": [
          "warn",
          {
            "minScore": 0.3
          }
        ],
        "max-potential-fid": [
          "warn",
          {
            "minScore": 0.1
          }
        ],
        "unused-javascript": [
          "warn",
          {
            "maxLength": 10
          }
        ],
        "critical-request-chains": [
          "warn",
          {
            "minScore": 0
          }
        ],
        "legacy-javascript": [
          "warn",
          {
            "maxLength": 5
          }
        ],
        "network-dependency-tree-insight": [
          "warn",
          {
            "minScore": 0
          }
        ]
      }
    }
  }
}