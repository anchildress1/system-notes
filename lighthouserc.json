{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "startServerCommand": "npm run start --workspace=apps/web",
      "url": [
        "http://localhost:3000/"
      ]
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "speed-index": [
          "warn",
          {
            "minScore": 0.5
          }
        ],
        "render-blocking-resources": [
          "warn",
          {
            "maxLength": 2
          }
        ]
      }
    }
  }
}